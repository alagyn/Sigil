    "version": "0.2.0",
    "configurations": [
        {
            "name": "sgc test",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceRoot}/build/SigilCompiler/sgc",
            "args": [
                "--file=test.sg"
            ]
        },
        {
            "name": "Gen Table",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/ParseTableGen",
            "module": "parse_table_gen.main",
            "args": [
                "tests/test_descr/G10.sebnf",
                "temp.h"
            ],
            "justMyCode": true
        },
        {
            "name": "Test Python",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/ParseTableGen",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "./tests",
                "-p",
                "test_*.py"
            ],
            "justMyCode": true
        }
    ]
}