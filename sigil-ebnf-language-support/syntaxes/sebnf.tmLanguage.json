{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Sigil EBNF",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#terminals"
        },
        {
            "include": "#nonterminals"
        },
        {
            "include": "#string-double"
        },
        {
            "include": "#string-single"
        },
        {
            "include": "#comment"
        }
    ],
    "repository": {
        "keywords": {
            "name": "keyword.sebnf",
            "match": "EMPTY|=|\\||;"
        },
        "terminals": {
            "name": "entity.name.class.sebnf",
            "match": "[A-Z_]+"
        },
        "nonterminals": {
            "name": "entity.name.sebnf",
            "match": "[a-z_]+"
        },
        "string-double": {
            "name": "string.regexp.double.sebnf",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.sebnf",
                    "match": "\\\\."
                }
            ]
        },
        "string-single": {
            "name": "string.regexp.single.sebnf",
            "begin": "'",
            "end": "'",
            "patterns": [
                {
                    "name": "constant.character.escape.sebnf",
                    "match": "\\\\."
                }
            ]
        },
        "comment": {
            "name": "comment.line.sebnf",
            "begin": "#",
            "end": "\n"
        }
    },
    "scopeName": "source.sebnf"
}